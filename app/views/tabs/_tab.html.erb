<% if @business %>
<a href="/tabs/<%= tab.id %>" class="tab-list-item">
  <li class="list-group-item justify-content-between">
    <span class="tab-title"><%= "@#{tab.customer.username}" %></span>
    <br>
    <span class="faded tab-time-stamp">
      <%= if tab.is_open? then "Opened " + time_ago_in_words(tab.created_at) + " ago" else "Closed " + time_ago_in_words(tab.updated_at) + " ago" end %>
    </span>
    <span class="badge <%= "open-tab" if tab.is_open? %>">
      $<%= price_in_dollars(tab.total_price + tab.tip) %>
    </span>
  </li>
</a>
<% else %>
<a href="/tabs/<%= tab.id %>" class="tab-list-item">
  <li class="list-group-item justify-content-between">
    <span class="tab-title"><%= tab.business.dba %></span>
    <br>
    <span class="faded tab-time-stamp">
      <%= if tab.is_open? then "Opened " + time_ago_in_words(tab.created_at) + " ago" else "Closed " + time_ago_in_words(tab.updated_at) + " ago" end %>
    </span>
    <span class="badge <%= "open-tab" if tab.is_open? %>">
      $<%= price_in_dollars(tab.total_price + tab.tip) %>
    </span>
  </li>
</a>
<% end %>
