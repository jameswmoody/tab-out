<h2>Login</h2>

<hr>

<%= form_for :session do |f| %>

  <%= f.label :username %><br>
  <%= f.text_field :username, class: "full-width form-control" %><br>
  <%= f.label :password %><br>
  <%= f.password_field :password, class: "full-width form-control" %><br>
  <%= f.submit 'Login', :class => "form_submit_button btn btn-success full-width"  %>
<% end %>
<p>Don't have an account? <%= link_to "Sign up.", new_customer_path %> </p>
