<% if @transaction && @transaction == true %>
  <div class="alert alert-success alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    Congrats! your transaction was processed correctly. You have successfully closed your tab at <strong>@<%= @tab.business.username %></strong>.
  </div>
<% end %>

<% if flash.any? %>
  <div class="alert alert-success alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= flash.notice %>
  </div>
<% end %>

<h2>Hi, <%= @customer.first_name %>!</h2>
<% if @open_tabs.any? %>
  <hr>
  <h3>Your open tabs:</h3>
  <%= render @open_tabs %>
<% else %>
  <h4>You have no open tabs.</h4>
<% end %>

<% if @recent_tabs.any? %>
  <hr>
  <h3>Recent Tabs</h3>
  <ul class="list-group">
    <%= render @recent_tabs %>
    <li class="list-group-item justify-content-between"><%= link_to 'Show History', tabs_path %></li>
  </ul>
<% end %>
<hr>
<%= form_tag(new_tab_path, method:'get') do %>
  <%= submit_tag("Open Tab", class: 'btn btn-primary full-width')%>
<% end %>
