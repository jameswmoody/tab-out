<div class="fix-width">
  <h2>Sign Up for TabOut!</h2>
  <%= form_for @customer do |f| %>
  <hr>
  <%= f.label :username %><br>
  <%= f.text_field :username, class: "full-width form-control", required: true %><br>

  <%= f.label :password %><br>
  <%= f.password_field :password, class: "full-width form-control", required: true %><br>

  <%= f.label :password_confirmation, "Confirm Password" %><br>
  <%= f.password_field :password_confirmation, class: "full-width form-control" %>
<div id="signup-extra-info">
  <hr class="hidden">

  <%= f.label :first_name, class: "hidden" %><br>
  <%= f.text_field :first_name, class: "full-width form-control hidden", required: true %><br class="hidden">

  <%= f.label :last_name, class: "hidden" %><br>
  <%= f.text_field :last_name, class: "full-width form-control hidden", required: true %><br class="hidden">

  <%= f.label :phone, class: "hidden" %><br class="hidden">
  <%= f.text_field :phone, class: "full-width form-control hidden", placeholder: 'Ex: +13128675309', required: true %><br class="hidden">

  <%= f.label :email, class: "hidden" %><br class="hidden">
  <%= f.email_field :email, class: "full-width form-control hidden", placeholder: 'Ex: email@email.com', required: true %>
  <br class="hidden">
</div>
  <%= f.submit 'Sign Up', id: "signup-button", class: "form_submit_button btn btn-success full-width"%>
  <% end %>
  <p>Already have an account? <%= link_to "Login.", login_path %> </p>

</div>
